= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :photo
    = f.text_field :photo
  .field
    = f.label :star
    = f.number_field :star
  .field
    = f.label :restaurant
    = f.text_field :restaurant
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
